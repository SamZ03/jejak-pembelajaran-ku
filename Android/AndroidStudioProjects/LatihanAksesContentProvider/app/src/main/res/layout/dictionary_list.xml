<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDictionaryList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvDictionaryId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dictionary ID" />

            <TextView
                android:id="@+id/tvDictionaryWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dictionary Word" />

            <TextView
                android:id="@+id/tvDictionaryLocale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dictionary Locale" />

            <TextView
                android:id="@+id/tvDictionaryAppID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dictionary App ID" />

            <TextView
                android:id="@+id/tvDictionaryFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dictionary Frequency" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>