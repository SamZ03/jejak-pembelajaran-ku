<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitHubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/pastel2</item>
        <!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">@color/pastel1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/pastel1</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/github_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.GitHubUser</item>
    </style>

    <style name="ShapeAppearanceOverlay.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>